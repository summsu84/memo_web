doctype html
html
  head
    title #{title}: Express website
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    // jquery library has to locate above javascript declaration because the javascript refer it
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')

  body
    nav.navbar.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar',
                aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Express Website
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    if user
                      li(class=(title === 'Home' ? 'active' : ''))
                          a(href='/') Home
                    if user
                      li(class=(title === 'About' ? 'active' : ''))
                          a(href='/about') About Us
                    if user
                      li(class=(title === 'Memo' ? 'active' : ''))
                          a(href='/memo') Memo
                    if user
                      li(class=(title === 'Checklist' ? 'active' : ''))
                          a(href='/checklist') Checklist
                    if !user
                      li(class=(title === 'Register' ? 'active' : ''))
                          a(href='/users/register') Register
                      li(class=(title === 'Login' ? 'active' : ''))
                          a(href='/users/login') Login
                ul.nav.navbar-nav.navbar-right
                    if user
                      li
                        a(href='/users/logout') Logout
    br
    .container
        != messages()
        block content
    footer
        p &copy; 2016, All rights Reserved

    script(src='/javascripts/bootstrap.js')
